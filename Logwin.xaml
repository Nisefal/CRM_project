<Window x:Class="Version_5.Logwin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід" Height="350" Width="300"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Name="LogBox" HorizontalAlignment="Left" Height="30" Margin="24,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232"/>
        <Label Content="Логін" HorizontalAlignment="Left" Height="25" Margin="24,35,0,0" VerticalAlignment="Top" Width="220" Grid.ColumnSpan="2"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Height="25" Margin="24,114,0,0" VerticalAlignment="Top" Width="220"/>
        <Button Name="Reg" Content="Зареєструватися" HorizontalAlignment="Left" Height="35" Margin="24,258,0,0" VerticalAlignment="Top" Width="120" Click="Reg_Click"/>
        <Button Name="In" Content="Увійти" HorizontalAlignment="Left" Height="35" Margin="149,258,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="2.285,0.631" Click="In_Click"/>
        <Label Content="Забули пароль?" HorizontalAlignment="Left" Height="23" Margin="95,174,0,0" VerticalAlignment="Top" Width="89" FontSize="10"/>
        <PasswordBox Name="PswrdBox" HorizontalAlignment="Left" Height="30" Margin="24,144,0,0" VerticalAlignment="Top" Width="232"/>

    </Grid>
</Window>
