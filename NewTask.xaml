<Window x:Class="Version_4.NewTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewTask" Height="500" Width="450"
        MinHeight="500" MinWidth="450"
        MaxHeight="500" MaxWidth="450"
        AllowsTransparency="True" WindowStyle="None" MouseDown="Window_MouseDown">

    <Grid Name="MainGrid" Margin="0,1,-6,-2">
        <Button Name="Enter" Content="Підтвердити" HorizontalAlignment="Left" Height="26" Margin="177,403,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Click="Enter_Click"/>
        <TextBlock Name="Topic" HorizontalAlignment="Left" Height="28" Margin="96,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="258" Foreground="Black"/>
        <TextBlock Name="Content" HorizontalAlignment="Left" Height="289" Margin="96,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="258" Foreground="Black" ScrollViewer.CanContentScroll="True"/>
        <RadioButton Name ="Bad" Content="Відмовитись" HorizontalAlignment="Left" Margin="256,413,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.071,2"/>
        <RadioButton Name="Neutral" Content="Домовитись" HorizontalAlignment="Left" Margin="167,390,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="Good" Content="Погодитись" HorizontalAlignment="Left" Margin="92,413,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
